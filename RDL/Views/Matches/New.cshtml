@model RDL.Models.Match
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Score", "Matches"))
{
    <div class="form-group">
    
        <label for="RedTeamID">Red Team Number</label>
        @Html.TextBoxFor(m => m.RedTeamID, new { @class = "form-control", required = "required", value = "" })
    </div>
    <div class="form-group">
        <label for="BlueTeamID">Blue Team Number</label>
        @Html.TextBoxFor(m => m.BlueTeamID, new { @class = "form-control", required = "required", value = "" })
    </div>

    <button type="submit" class="btn btn-primary">Score Match</button>
}

