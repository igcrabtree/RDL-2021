@model RDL.ViewModels.NewMatchViewModel
@{
    ViewBag.Title = "Add New Match";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Score", "Matches"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.blue)
        @Html.TextBoxFor(m => m.blue.Id, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.red)
        @Html.TextBoxFor(m => m.red.Id, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>

}
