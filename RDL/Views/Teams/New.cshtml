@model RDL.ViewModels.NewTeamViewModel
@{
    ViewBag.Title = "Add New Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add New Team</h2>

@using (Html.BeginForm("Add", "Teams"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Team.Name)
        @Html.TextBoxFor(m => m.Team.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Team.City)
        @Html.TextBoxFor(m => m.Team.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Team.State)
        @Html.TextBoxFor(m => m.Team.State, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Team.Score)
        @Html.TextBoxFor(m => m.Team.Score, new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Add Team</button>
}