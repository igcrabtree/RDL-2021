
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .form-label {
        margin-bottom: 5px;
        font-size: large;
    }
    .form-input {
        margin-bottom: 5px;
    }
</style>
<div class="row">
    <div class="col-md-4">
        <form>
            <label for="red-team-name" class="form-label">Red Team Name</label><br>
            <input type="text" class="form-input" id="red-team-name" name="red-team-name"><br>
        </form>
    </div>
    <div class="col-md-4">
        <form>
            <label for="blue-team-name" class="form-label">Blue Team Name</label><br>
            <input type="text" class="form-input" id="blue-team-name" name="blue-team-name"><br>
        </form>
    </div>
</div>
<button class="btn btn-default continue" onclick="location.href = '@Url.Action("Index", "Matches")';return false;">Continue</button>
